{% extends "base.njk" %}

{% block login_link %}
active
  
{% endblock %}

{% block title %}
Welcome to login page  
{% endblock %}

{% block content %}
  <div class="container my-5">
    <p class='my-5'>{{message}}</p>
    <form action="/login" method="post">
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="inputEmail3">Email</label>
        <div class="col-sm-10">
          <input
          class="form-control"
          id="inputEmail3"
          type="email"
          name="email"
          placeholder="Enter your email"
          required
/>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label" for="inputPassword3"
        >Enter your password</label
      >
        <div class="col-sm-10">
          <input
          class="form-control"
          id="inputPassword3"
          type="password"
          name="password"
          placeholder="Enter your password"
          required
/>
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Login</button>
    </form>
  </div>

{% endblock %}